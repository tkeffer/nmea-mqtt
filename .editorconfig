#
# See https://editorconfig.org for the meaning of this file.
#

root = true

# Python files. This is the alternate max length specified by PEP8.
[*.py]
max_line_length = 99

# Javascript files.
[*.{js,jsx}]
max_line_length = 80
indent_size = 4

# HTML files
[*.{htm,html}]
max_line_length = 120

[*.md]
# Please keep this at 80. Even an IBM punch card can do that.
max_line_length = 80
